<Window x:Class="LedMusic.ChooseControllerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LedMusic"
        mc:Ignorable="d"
        Title="Choose Controller" Height="305.882" Width="252.101"
        ResizeMode="NoResize" ShowInTaskbar="False">
    <Grid>
        <Button x:Name="btnChoose" Content="Choose" HorizontalAlignment="Left" Margin="146,239,0,0" VerticalAlignment="Top" Width="75" IsDefault="True" Click="btnChoose_Click"/>
        <Button x:Name="btnCancel" Content="Cancel" HorizontalAlignment="Left" Margin="66,239,0,0" VerticalAlignment="Top" Width="75" IsCancel="True" Click="btnCancel_Click"/>
        <ListBox x:Name="lbControllers" HorizontalAlignment="Left" Height="224" Margin="10,10,0,0" VerticalAlignment="Top" Width="211" ItemsSource="{Binding AvailableControllers}"/>

    </Grid>
</Window>
